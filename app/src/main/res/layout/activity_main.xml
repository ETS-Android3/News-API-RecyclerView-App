    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <include android:visibility="gone" android:id="@+id/login" layout="@layout/login"/>
        <include android:visibility="visible" android:id="@+id/fingerprint" layout="@layout/fingerprint_layout"/>
        <include android:visibility="gone" android:id="@+id/news" layout="@layout/news_title_list"/>
        <include android:visibility="gone" android:id="@+id/news_details" layout="@layout/news_details"/>
        <include android:visibility="gone" android:id="@+id/main" layout="@layout/content_main"/>
    </FrameLayout>


