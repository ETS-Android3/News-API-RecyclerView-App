<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#BFFFFFFF">


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <include android:visibility="visible" android:id="@+id/fingerprint" layout="@layout/fingerprint_layout"/>
        <include android:visibility="gone" android:id="@+id/news_details" layout="@layout/news_details"/>
        <include android:visibility="gone" android:id="@+id/main" layout="@layout/content_main"/>
    </FrameLayout>


</androidx.drawerlayout.widget.DrawerLayout>